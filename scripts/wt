#!/usr/bin/env bash
# Worktree CLI wrapper
# Executable entrypoint that sources wt-cli.sh and calls wt_cli_main

# Get script directory
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

# Source the library
# shellcheck source=./wt-cli.sh
source "$SCRIPT_DIR/wt-cli.sh"

# Call main function and exit with its status
wt_cli_main "$@"
exit $?
