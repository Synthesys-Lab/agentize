# ============================================================================
# Rust Build Targets
# ============================================================================

.PHONY: build-rust
build-rust:
	@echo "Building Rust project with Cargo..."
	@cargo build --release

.PHONY: test-rust
test-rust:
	@echo "Running Rust tests..."
	@cargo test

.PHONY: clean-rust
clean-rust:
	@echo "Cleaning Rust build artifacts..."
	@cargo clean

.PHONY: lint-rust
lint-rust:
	@echo "Running Rust linter (clippy)..."
	@cargo clippy -- -D warnings 2>/dev/null || cargo clippy
